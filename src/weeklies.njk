---
title: Weeklies
layout: base.njk
permalink: /weeklies/
---

{# Show the newest post in full first #}
{% set latestPost = collections.weekliesSorted[0] %}

<article class="latest-weekly">
  <h2>Latest Links</h2>
  <div class="weekly-content">
    {{ latestPost.templateContent | safe }}
  </div>
</article>

<hr>

<h2>Previous Posts</h2>

<div class="previous-posts">
  <ul>
  {% for i in range(1, collections.weekliesSorted.length - 1) %}
    {% set post = collections.weekliesSorted[i] %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a> ({{ post.date | date("%B %d, %Y") }})
    </li>
  {% endfor %}
  </ul>
</div>
